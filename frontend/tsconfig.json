{
  "compilerOptions": {
    "paths": {
      "@worms/*": ["./src/*"],
      "@worms/assets/*": ["./src/assets/*"],
      "@worms/common/*": ["./src/common/*"],
      "@worms/components/*": ["./src/components/*"],
      "@worms/hooks/*": ["./src/hooks/*"],
      "@worms/utils/*": ["./src/utils/*"],
      "@worms/pages/*": ["./src/pages/*"]
    },
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
